<h3>Post a Comment</h3>

<%= form_for [@article, @comment] do |c| %>
    <p>
        <%= c.label :author_name, "Your Name" %><br />
        <%= c.text_field :author_name %>
    </p>
    <p>
        <%= c.label :body, "Your Comment" %><br />
        <%= c.text_area :body %>
    </p>
    <p>
        <%= c.submit 'Submit' %>
    </p>
<% end %>